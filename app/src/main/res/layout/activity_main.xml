<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFEB3B" android:onClick="showInfo">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_have"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintVertical_bias="0.154" android:textSize="18sp" android:id="@+id/textView2"
            android:gravity="center"/>
    <TextView
            android:text="@string/money_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/MoneyValue"
            android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintVertical_bias="0.132" android:gravity="center" android:textStyle="bold"/>
    <Button
            android:text="@string/make_it_rain"
            android:layout_width="114dp"
            android:layout_height="49dp" android:id="@+id/MakeItRain"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/MoneyValue"
            app:layout_constraintHorizontal_bias="0.537" app:layout_constraintVertical_bias="0.138"
            android:shadowColor="#0B2BDD" android:background="#673AB7" android:gravity="center"
            android:textColor="#FFFFFF"/>
    <Button
            android:text="@string/show_info"
            android:layout_width="118dp"
            android:layout_height="46dp" android:id="@+id/ShowInfo"
            android:background="#673AB7" android:gravity="center"
            android:textColor="#FFFFFF" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/MakeItRain"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintVertical_bias="0.214" android:onClick="showInfo"/>
    on
</androidx.constraintlayout.widget.ConstraintLayout>